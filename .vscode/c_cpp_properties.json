{
  // C++ configurations overrides
  // See: https://code.visualstudio.com/docs/cpp/config-msvc#_cc-configurations
  "configurations": [
    {
      "name": "Win32",
      "includePath": ["${workspaceFolder}/**"],
      // If using your own Windows PC with MSYS2:
      "compilerPath": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
      // If using a University lab PC:
      // "compilerPath": "C:\\Programs\\mingw-w64\\mingw32\\bin\\g++.exe",
      "cStandard": "c17",
      "cppStandard": "gnu++17",
      "intelliSenseMode": "windows-gcc-x64"
    },
    {
      "name": "Linux",
      "includePath": ["${workspaceFolder}/**"],
      "compilerPath": "/usr/bin/gcc",
      "cStandard": "c17",
      "cppStandard": "gnu++17",
      "intelliSenseMode": "linux-gcc-x64"
    },
    {
      "name": "Mac",
      "includePath": ["${workspaceFolder}/**"],
      "cStandard": "c17",
      "cppStandard": "gnu++17",
      "intelliSenseMode": "macos-clang-arm64"
    }
  ],
  "version": 4
}
