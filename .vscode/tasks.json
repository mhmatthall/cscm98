{
  // Standard build task for C++ projects in vscode.
  // Requires g++/gdb.
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "CSCM98: Build (gcc)",
      "detail": "Compile the current C++ project using g++.",
      "command": "g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "utils.cpp",
        "-pthread",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.o"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["CSCM98: Clean up output files"],
      "windows": {
        // Output `.exe` files on Windows
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "utils.cpp",
          "-pthread",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}.exe"
        ]
      }
    },
    {
      "type": "shell",
      "label": "CSCM98: Clean up output files",
      "command": "find ${fileDirname}/*.o -type f -delete || echo 0",
      "windows": {
        // Windows-compatible delete command
        "command": "cmd.exe /c del *.exe /q /f /s"
      }
    }
  ]
}
